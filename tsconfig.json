{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "allowJs": true,
    "strict": false,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@tests": ["tests"],
      "@tests/*": ["tests/*"],
      "@stories": ["stories"],
      "@stories/*": ["stories/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests", "stories", "src/**/*.stories.tsx"]
}
